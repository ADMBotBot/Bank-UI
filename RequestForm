Public Class RequestForm
    Private Sub RequestForm_Load(sender As Object, e As EventArgs) Handles MyBase.Load
        CreditLbl.BackColor = System.Drawing.Color.Transparent
        AccountLbl.BackColor = System.Drawing.Color.Transparent
        WithDepoLbl.BackColor = System.Drawing.Color.Transparent
        MortgageLbl.BackColor = System.Drawing.Color.Transparent
        LoanLbl.BackColor = System.Drawing.Color.Transparent
    End Sub

    Private Sub SendBtn_Click(sender As Object, e As EventArgs) Handles SendBtn.Click
        MessageBox.Show("Requested info has been sent and notified to the General Manager of the Bank.", "Request Sent")
        Me.Close()
    End Sub
End Class
